footer(class="pt-4 my-md-5 pt-md-5 border-top")
    div(class="row")
        div(class="col-12 col-md")
            img(class="mb-2" src="/images/full_logo.png" alt="" height="50")
            small(class="d-block mb-3 text-muted") &copy; 2017-2018

        each item in data.menu  
            div(class="col-8 col-md")
                if item.children.length > 0
                    h5  #{item.name}
                else
                    h5
                         a(class='footer-link' href="/" + item.url) #{item.name}
                each child in item.children
                    ul(class="list-unstyled text-small")
                        li
                            a( class="text-muted" href="/" + item.url +"/" + child.url) #{child.name}
                else
                    